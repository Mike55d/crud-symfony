<style>
	table , th  ,td{
		border:1px solid black;
	}
	table{

		border-collapse: collapse;
	}
	.header{
		text-align: center;
	}
	th{
		text-align: center;
		background: #D7D5D5;
	}
	td{
		text-align: center;
        white-space:pre ;
	}
	.tabla{
		width: 10000px;
	}
</style>
     <page>
        
    	<h5 class="header">Listado de niños</h5>
    <table style="margin-left:50px" >
    		<tr >
    			<th style="width:20px">Nº</th>
    			<th style="width:130px">Colegio</th>
    			<th style="width:130px">Nombre</th>
    			<th style="width:140px">Direccion</th>
    			<th style="width:130px">Telefono</th>
    			<th style="width:130px">Barrio</th>
    			<th style="width:130px">N. padres</th>
                <th style="width:110px">Asistencia</th>
                {% if foto %}
    			<th style="width:80px">foto</th>
                {% endif %}
    		</tr>
            {% for key , child in childs %}
    		<tr>
    			<td>{{key}}</td>
    			<td>{{child.colegio|wordwrap(15,'<br>')|raw}}</td>
    			<td>{{child.name|wordwrap(15,'<br>')|raw}}</td>
    			<td>{{child.address|wordwrap(25,'<br>')|raw}}</td>
    			<td>{{child.phone|wordwrap(15,'<br>')|raw}}</td>
    			<td>{{child.barrio|wordwrap(15,'<br>')|raw}}</td>
    			<td>{{child.parents|wordwrap(15,'<br>')|raw}}</td>
                <td></td>
                {% if foto %}
                {% if child.image %}
                    <td><img height="80" src="img/childs/{{child.image}}" alt=""></td>
                    {% else %}
                    <td></td>
                {% endif %}
                {% endif %}
    			
    		</tr>
            {% endfor %}
    </table>
     
 </page>
