sumarEstrellas();

function addStar(star,child,value,type){
	datos = 'star='+star+
	'&child='+child;
	$.ajax({
		type:"POST",
		url:"{{path ('addStar')}}",
		data:datos,
		success:function(r){
			if (r==1){
				$('#tableContainer').load(' #tableStar');
				if (type == 'blanca') {
					totalBlancas+= parseInt(value);
					$('#totalBlancas').val(totalBlancas);
				}else{
					totalNegras+= parseInt(value);
					$('#totalNegras').val(totalNegras);
				}
			}else{
			}                           
		}
	});
}

function delStar(id,value,type){
	datos = 'id='+id;
	$.ajax({
		type:"POST",
		url:"{{path ('delStar')}}",
		data:datos,
		success:function(r){
			if (r==1){
				$('#tableContainer').load(' #tableStar');
				if (type == 'blanca') {
					totalBlancas-= parseInt(value);
					$('#totalBlancas').val(totalBlancas);
				}else{
					totalNegras-= parseInt(value);
					$('#totalNegras').val(totalNegras);
				}
			}else{
			}                           
		}
	});
}

