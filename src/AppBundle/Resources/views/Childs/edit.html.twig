	//autocompletar
	var availableNames = {{childNames | json_encode | raw}};
	var availablePhones = {{childPhones | json_encode | raw}};
	var availableEmails = {{childEmails | json_encode | raw}};
	var availableParents = {{childParents | json_encode | raw}};
	$( "#name" ).autocomplete({
