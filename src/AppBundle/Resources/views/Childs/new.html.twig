{% extends "::base.html.twig" %}

{% block title %}Nuevo niño{% endblock %}

{% block body %}
<div class="panel panel-default">
	<div class="panel-heading">Nuevo Niño</div>
	<div class="panel-body">
		<form method="post" enctype="multipart/form-data" action="{{ path ('childs_new')}}">
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-4"><label for="">Nombre</label><input class="form-control" name="name" type="text"></div>
					<div class="col-md-4"><label for="">Fecha de Nacimiento</label><input name="date" class="form-control" type="date"></div>
					<div class="col-md-4"><label for="">Telefono</label><input name="phone" class="form-control" type="text"></div>
					<div class="col-md-12"><label for="">Email</label><input name="email" class="form-control" type="text"></div>
					<div class="col-md-12"><label for="">Direccion</label><input type="text" name="address" class="form-control" id="searchTextField"></div>
					<div class="col-md-12">
						<div class="col-md-6"><label for="">Lat</label><input name="lat" readonly type="text" class="MapLat form-control"></div>
						<div class="col-md-6"><label for="">Long</label><input name="lng" readonly type="text" class="MapLon form-control"></div>
					</div>
					<div class="col-md-12">
						<div id="map_canvas" style="height: 200px;width: 100%;margin: 0.6em; margin-right: 20px"></div>
					</div>
					<div class="col-md-6"><label for="">Barrio</label><input name="barrio" class="form-control" type="text"></div>
					<div class="col-md-6"><label for="">Nombre padres</label><input name="parents" class="form-control" type="text"></div>
					<div class="col-md-6"><label for="">Grado</label>
						<select name="grade" class="form-control" id="">
							<option value="A">A</option>
							<option value="B">B</option>
							<option value="C">C</option>
						</select>
					</div>
					<div class="col-md-6"><label for="">Grupo</label>
						<select name="grupo" class="form-control" id="">
							{% for grupo in grupos %}
							<option value="{{grupo.id}}">{{grupo.name}}</option>
							{% endfor %}
						</select>
					</div>
					<div class="col-md-6"><label for="">Colegio</label>
						<select name="institute" class="form-control" id="">
							{% for institute in institutes %}
							<option value="{{institute.id}}">{{institute.name}}</option>
							{% endfor %}
						</select>
					</div>
					<div class="col-md-6"><label for="">Ruta</label>
						<select name="institute" class="form-control" id="">
							{% for route in routes %}
							<option value="{{route.id}}">{{route.name}}</option>
							{% endfor %}
						</select>
					</div>
					<div class="col-md-6"><label for="">Telefonero</label>
						<select name="telefonero" class="form-control" id="">
							{% for telefonero in telefoneros %}
							<option value="{{telefonero.id}}">{{telefonero.name}}</option>
							{% endfor %}
						</select>
					</div>
					<div class="checkbox col-md-6"><label class="activo"><input name="active"  type="checkbox">Activo</label></div>
					<div class="col-md-12"><label for="">Observaciones</label><textarea name="observations" class="form-control" id="" cols="5" rows="2"></textarea></div>
					<div class="col-md-12 mt-10"><button class="btn btn-success m-r-10">Crear</button><input type="reset" class="btn btn-warning"></div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="col-md-12 image"><img id="imgSalida" width="280" src="" /></div>
				<div class="col-md-12 mb-10"><input class="form-control" name="image" id="file-input" type="file" /></div>
				<div class="col-md-12"><label for="">Comentarios</label><textarea name="comments" class="form-control" id="" cols="5" rows="2"></textarea></div>
				<div class="panel panel-default">
					<div class="panel-body ">
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="recojer[]" value="4"  type="checkbox">Recojer viernes</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="recojer[]" value="5"  type="checkbox">Recojer sabado</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="recojer[]" value="6"  type="checkbox">Recojer domingo</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="confirmar[]" value="4"  type="checkbox">Confirmar viernes</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="confirmar[]" value="5"  type="checkbox">Confirmar sabado</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="confirmar[]" value="6"  type="checkbox">Confirmar domingo</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="llega[]" value="4"  type="checkbox">Llega viernes</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="llega[]" value="5"  type="checkbox">Llega sabado</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="llega[]" value="6"  type="checkbox">Llega domingo</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="noViene[]" value="4"  type="checkbox">No viene viernes</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="noViene[]" value="5"  type="checkbox">No viene sabado</label></div></div>
						<div class="col-md-4 mr-10"><div class="checkbox col-md-6"><label><input name="noViene[]" value="6"  type="checkbox">No viene domingo</label></div></div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
{% endblock %}

