          <label class="m-r-10" for="">rutas</label><input {% if 'rutas' in permisosAdmin.permisos %} checked {% endif %} type="checkbox" value="rutas" name="permisosAdmin[]"><br>
          <label class="m-r-10" for="">grupos</label><input {% if 'grupos' in permisosAdmin.permisos %} checked {% endif %} type="checkbox" value="grupos" name="permisosAdmin[]"><br>
          <label class="m-r-10" for="">usuarios</label><input {% if 'usuarios' in permisosAdmin.permisos %} checked {% endif %} type="checkbox" value="usuarios" name="permisosAdmin[]"><br>
