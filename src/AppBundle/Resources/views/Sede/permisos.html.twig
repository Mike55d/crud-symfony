          <label class="m-r-10" for="">grupos</label><input {% if 'grupos' in permisosUser.permisos %} checked {% endif %} type="checkbox" value="grupos" name="permisosUser[]"><br>
          <label class="m-r-10" for="">usuarios</label><input {% if 'usuarios' in permisosUser.permisos %} checked {% endif %} type="checkbox" value="usuarios" name="permisosUser[]"><br>
          <label class="m-r-10" for="">Reporte de asistencia</label><input {% if 'reporteAsistencia' in permisosUser.permisos %} checked {% endif %} type="checkbox" value="reporteAsistencia" name="permisosUser[]"><br>
          <label class="m-r-10" for="">Reporte de Rutas</label><input {% if 'reporteRutas' in permisosUser.permisos %} checked {% endif %} type="checkbox" value="reporteRutas" name="permisosUser[]"><br>
